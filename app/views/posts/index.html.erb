<h4>バンド一覧</h4>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>タイトル</th>
      <th>説明</th>
      <th>いいね</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= link_to post.title, post, class: 'post-title' %>
        </td>
        <td>
          <%= truncate(post.body, length: 100) %>
        </td>
        <td id="like_buttons_<%= post.id %>">
          <%= render "likes/like", post: post %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

