<div>
  <%= flash[:notice] %>
</div>
<div class="container mt-5">
  <div class="profile-header mb-4">
    <h3><%= @user.name %> さん</h3>

    <h6 class="bio-title mb-2">自己紹介</h6>
    <div class="bio-section mb-4">
      <p><%= @user.bio %></p>
    </div>

    <% if @user == current_user && !current_user.guest? %>
      <div class="mt-3">
        <%= link_to 'プロフィールを編集', edit_user_path(@user), class: "btn btn-warning" %>
      </div>
    <% end %>

    <% if @user == current_user %>
      <div class="mt-2">
        <%= link_to 'イイねした投稿', likes_user_path(@user), class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>

  <div class="recommended-bands">
    <h4 class="mb-4">おすすめのバンド</h4>
    <ul class="list-unstyled">
      <% @posts.each do |post| %>
        <li class="mb-3 p-3 border rounded bg-light">
          <h5><%= link_to post.title, post_path(post) %></h5>
          <p class="text-muted"><%= post.created_at.strftime("%Y-%m-%d %H:%M") %></p>
          <p><%= post.body %></p>
        </li>
      <% end %>
    </ul>
    <div class="pagination-links">
      <%= paginate @posts %>
    </div>
  </div>

  <div class="mt-4">
    <%= link_to '戻る', users_path, class: "btn btn-secondary" %>
  </div>
</div>

<style>
  .profile-header h3 {
    font-size: 2em;
    margin-bottom: 10px;
    color: navy;
  }

  .bio-title {
    margin-bottom: 10px;
    font-size: 1.5em;
    color: darkslategray;
  }

  .bio-section {
    padding: 20px;
    border: 1px solid lightgrey;
    border-radius: 5px;
    background-color: white;
  }

  .bio-section p {
    font-size: 1.2em;
    color: dimgray;
  }

  .profile-header .btn-warning {
    background-color: #ffc107;
    border-color: #ffc107;
    color: #000;
  }

  .profile-header .btn-secondary {
    background-color: steelblue;
    border-color: steelblue;
  }

  .recommended-bands h4 {
    font-size: 1.5em;
    margin-bottom: 20px;
    color: darkslategray;
  }

  .recommended-bands ul {
    padding-left: 0;
  }

  .recommended-bands li {
    padding: 15px;
    border: 1px solid lightgrey;
    border-radius: 5px;
    background-color: white;
  }

  .recommended-bands h5 {
    margin: 0;
    font-size: 1.25em;
    color: navy;
  }

  .recommended-bands p {
    margin: 5px 0;
    color: darkgrey;
  }

  .pagination-links {
    display: flex;
    justify-content: center;
    margin-top: 20px;
  }
</style>

