<h4 class="mb-4 text-center">投稿編集</h4>

<div class="row justify-content-center">
  <div class="col-md-6">
    <%= form_with model: [:admin, @post], local: true, class: 'p-3 border rounded bg-light' do |f| %>
      <div class="form-group">
        <%= f.label :title, "タイトル", class: 'font-weight-bold' %>
        <%= f.text_field :title, class: "form-control", placeholder: 'タイトルを入力してください' %>
      </div>

      <div class="form-group">
        <%= f.label :body, "内容", class: 'font-weight-bold' %>
        <%= f.text_area :body, class: "form-control", rows: 5, placeholder: '内容を入力してください' %>
      </div>

      <div class="form-group">
        <%= f.label :link, "リンク", class: 'font-weight-bold' %>
        <%= f.text_field :link, class: "form-control", placeholder: 'リンクを入力してください' %>
      </div>

      <div class="form-group">
        <%= f.label :tag, "タグ", class: 'font-weight-bold' %>
        <%= f.select :tag, Post.tag_options, class: "form-control" %>
      </div>

      <div class="text-center mt-4">
        <%= f.submit '更新', class: "btn btn-primary mr-2" %>
        <%= link_to '戻る', admin_posts_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
