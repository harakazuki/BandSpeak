<h4>投稿管理</h4>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>タグ</th>
      <th>リンク</th>
      <th>アクション</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.tag %></td>
        <td><%= link_to post.link, post.link, target: '_blank' %></td>
        <td>
          <%= link_to '編集', edit_admin_post_path(post) %> |
          <%= link_to '削除', admin_post_path(post), method: :delete, data: { confirm: '本当に削除しますか？' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'ダッシュボードに戻る', admin_dashboards_path %>

<%= paginate @posts %>