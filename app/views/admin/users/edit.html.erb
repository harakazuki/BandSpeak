<h4 class="mb-4 text-center">ユーザー編集</h4>

<div class="row justify-content-center">
  <div class="col-md-6">
    <%= form_with(model: @user, url: admin_user_path(@user), method: :patch, local: true, class: 'p-3 border rounded bg-light') do |form| %>
      <div class="form-group">
        <%= form.label :name, '名前', class: 'font-weight-bold' %>
        <%= form.text_field :name, class: 'form-control', placeholder: '名前を入力してください' %>
      </div>

      <div class="form-group">
        <%= form.label :bio, '自己紹介', class: 'font-weight-bold' %>
        <%= form.text_area :bio, class: 'form-control', rows: 4, placeholder: '自己紹介文を入力してください' %>
      </div>

      <div class="form-group">
        <%= form.label :email, 'メールアドレス', class: 'font-weight-bold' %>
        <%= form.email_field :email, class: 'form-control', placeholder: 'メールアドレスを入力してください' %>
      </div>

      <div class="form-group mt-4 text-center">
        <%= form.submit '更新', class: 'btn btn-primary mr-2' %>
        <%= link_to '戻る', admin_users_path, class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>
