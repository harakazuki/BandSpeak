<div class="management-section">
  <h2>ユーザー管理</h2>
  <div class="user-list-container">
    <ul class="user-list">
      <% @users.each do |user| %>
        <li class="user-item">
          <span class="user-name"><%= user.name %></span> -
          <span class="user-email"><%= user.email %></span>
          <%= link_to '編集', edit_admin_user_path(user) %>
          <%= link_to '削除', admin_user_path(user), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %>
        </li>
      <% end %>
    </ul>
    <%= link_to 'ダッシュボードに戻る', admin_dashboards_path %>
    <div class="pagination">
      <%= paginate @users, param_name: :user_page %>
    </div>
  </div>
</div>