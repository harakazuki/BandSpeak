<%= form_with(model: [:admin, @comment], local: true) do |form| %>
  <h4>コメントの編集</h4>

  <div class="form-group">
    <%= form.label :content, 'コメント内容' %>
    <%= form.text_area :content, class: 'form-control', rows: 4 %>
  </div>

  <div class="form-group">
    <%= form.submit '更新する', class: 'btn btn-primary' %>
    <%= link_to '戻る', admin_comments_path, class: 'btn btn-secondary' %>
  </div>
<% end %>