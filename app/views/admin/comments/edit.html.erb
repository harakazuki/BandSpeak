<h4 class="mb-4 text-center">コメント編集</h4>
<div class="row justify-content-center">
  <div class="col-md-6">
    <%= form_with(model: [:admin, @comment], local: true, class: 'p-3 border rounded bg-light') do |form| %>
      <div class="form-group">
        <%= form.label :content, 'コメント内容', class: 'font-weight-bold' %>
        <%= form.text_area :content, class: 'form-control', rows: 5, placeholder: 'コメントを入力してください' %>
      </div>

      <div class="text-center mt-4">
        <%= form.submit '更新', class: 'btn btn-primary mr-2' %>
        <%= link_to '戻る', admin_comments_path, class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>
