<h1>管理ダッシュボード</h1>

<div class="management-section">
  <h2>ユーザー管理</h2>
  <div class="user-list-container">
    <ul class="user-list">
      <% @users.each do |user| %>
        <li class="user-item">
          <span class="user-name"><%= user.name %></span> - 
          <span class="user-email"><%= user.email %></span>
          <%= link_to '削除', admin_user_path(user), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %>
        </li>
      <% end %>
    </ul>

    <div class="pagination">
      <%= paginate @users, params: { user_page: params[:user_page] } %>
    </div>
  </div>
</div>

<div class="management-section">
  <h2>コメント管理</h2>
  <div class="comment-list-container">
    <ul class="comment-list">
      <% @comments.each do |comment| %>
        <li class="comment-item">
          <p><strong>投稿者:</strong> <%= comment.user.name %></p>
          <p><strong>内容:</strong> <%= comment.content %></p>
          <%= link_to '削除', admin_comment_path(comment), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %>
        </li>
      <% end %>
    </ul>

    <div class="pagination">
      <%= paginate @comments, params: { comment_page: params[:comment_page] } %>
    </div>
  </div>
</div>

<style>
  .management-section {
    margin: 0 auto;
    max-width: 800px;
    padding: 20px;
  }

  h1, h2 {
    text-align: center;
  }

  .user-list, .comment-list {
    list-style-type: none;
    padding: 0;
  }

  .user-item, .comment-item {
    border: 1px solid #ddd;
    padding: 10px;
    margin-bottom: 10px;
    border-radius: 5px;
  }

  .user-item {
    background-color: #f9f9f9;
  }

  .comment-item {
    background-color: #f1f1f1;
  }

  .pagination {
    text-align: center;
    margin-top: 20px;
  }

  .btn-danger {
    margin-left: 10px;
  }
</style>
