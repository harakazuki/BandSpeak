<div id="like-button-<%= post.id %>">
  <% if post.like_ids_by?(current_user) %>
    <%= link_to post_like_path(post, post.likes.find_by(user: current_user)), method: :delete, remote: true do %>
      ♡<%= post.likes.count %> いいね
    <% end %>
  <% else %>
    <%= link_to post_likes_path(post), method: :post, remote: true do %>
      ♡<%= post.likes.count %> いいね
    <% end %>
  <% end %>
</div>