<h2 class="signup-heading">サインアップ</h2>

<%= form_with model: @user, url: user_registration_path, class: "signup-form" do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name, "ユーザーネーム" %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  
  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード（確認用）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "サインアップ", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<style>
  .signup-heading {
    text-align: center;
    font-size: 2em;
    margin-bottom: 20px;
    color: Black;
  }

  .signup-form {
    max-width: 500px;
    margin: 0 auto;
    padding: 20px;
    background-color: #f9f9f9;
    border-radius: 8px;
    box-shadow: 0 0 10px LightGray;
  }

  .field {
    margin-bottom: 20px;
  }

  .form-control {
    width: 100%;
    padding: 10px;
    border-radius: 5px;
    border: 1px solid LightGray;
    box-sizing: border-box;
  }

  .btn-primary {
    background-color: RoyalBlue;
    color: White;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  .btn-primary:hover {
    background-color: MediumBlue;
  }
</style>
