<div class="container mt-5">
  <h2 class="text-center mb-4">ログイン</h2>

  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
      <div class="border p-4 rounded bg-light">
        <%= form_with model: @user, url: user_session_path, class: "login-form" do |f| %>
          <div class="mb-3">
            <%= f.label :name, "ユーザーネーム", class: "form-label" %>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :password, "パスワード", class: "form-label" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-check mb-3">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, "ログイン情報を記憶する", class: "form-check-label" %>
            </div>
          <% end %>

          <div class="text-center">
            <%= f.submit "ログイン", class: "btn btn-primary btn-sm w-100" %>
          </div>
        <% end %>

        <div class="text-center mt-3">
          <%= button_to 'ゲストログイン', guest_sign_in_path, method: :post, class: "btn btn-secondary btn-sm w-100" %>
        </div>

        <%= render "devise/shared/links", class: "text-center mt-3" %>
      </div>
    </div>
  </div>
</div>