<h2 class="login-heading">ログイン</h2>

<%= form_with model: @user, url: user_session_path, class: "login-form" do |f| %>
  <div class="field">
    <%= f.label :name, "名前" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field remember-me">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me, "ログイン情報を記憶する", class: "form-check-label" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-primary" %>
  </div>
<% end %>

<div class="guest-login">
  <%= button_to 'ゲストログイン', guest_sign_in_path, method: :post, class: "btn btn-secondary" %>
</div>

<%= render "devise/shared/links" %>

<style>
  .login-heading {
    text-align: center;
    font-size: 2em;
    margin-bottom: 20px;
    color: Black;
  }

  .login-form {
    max-width: 500px;
    margin: 0 auto;
    padding: 20px;
    background-color: #f9f9f9;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }

  .field {
    margin-bottom: 20px;
  }

  .form-control {
    width: 100%;
    padding: 10px;
    border-radius: 5px;
    border: 1px solid #ccc;
    box-sizing: border-box;
  }

  .form-check-input {
    margin-right: 10px;
  }

  .form-check-label {
    font-size: 1em;
  }

  .remember-me {
    text-align: center;
  }

  .btn-primary {
    background-color: RoyalBlue;
    color: White;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  .btn-primary:hover {
    background-color: MediumBlue;
  }

  .btn-secondary {
    background-color: LightGray;
    color: Black;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  .btn-secondary:hover {
    background-color: Gray;
  }

  .guest-login {
    text-align: center;
    margin-top: 20px;
  }
</style>
