<div>
  <%= flash[:notice] %>
</div>
<h1 class="welcome-heading">Welcome to BandSpeak！</h1>

<div class="auth-links">
  <% if user_signed_in? %>
    <p class="welcome-message">ようこそ！ <span class="user-name"><%= current_user.name %></span>さん！</p>
    <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "btn btn-logout" %>
  <% else %>
    <%= link_to 'ログイン', new_user_session_path, class: "btn btn-login" %> |
    <%= link_to 'サインアップ', new_user_registration_path, class: "btn btn-signup" %>
  <% end %>
</div>

<style>
  .welcome-heading {
    text-align: center;
    font-size: 2.5em;
    margin-top: 20px;
    color: Black;
  }

  .auth-links {
    text-align: center;
    margin-top: 30px;
  }

  .welcome-message {
    font-size: 1.5em;
    color: DarkRed;
    margin-bottom: 20px;
  }

  .user-name {
    font-weight: bold;
    color: MidnightBlue;
  }

  .btn {
    display: inline-block;
    padding: 10px 20px;
    margin: 5px;
    text-decoration: none;
    font-size: 1em;
    border-radius: 5px;
    transition: background-color 0.3s, color 0.3s;
  }

  .btn-login {
    background-color: RoyalBlue;
    color: White;
  }

  .btn-login:hover {
    background-color: RoyalBlue;
  }

  .btn-signup {
    background-color: LightGreen;
    color: Black;
  }

  .btn-signup:hover {
    background-color: LimeGreen;
  }

  .btn-logout {
    background-color: Salmon;
    color: White;
  }

  .btn-logout:hover {
    background-color: DarkOrange;
  }
</style>