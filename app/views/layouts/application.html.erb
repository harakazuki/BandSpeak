<!DOCTYPE html>
<html>
  <head>
    <script src="https://kit.fontawesome.com/8a284926e8.js" crossorigin="anonymous"></script>
    <title>BandSpeak</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <%= link_to 'BandSpeak', about_path, class: "navbar-brand" %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto">
              <% if user_signed_in? %>
                <li class="nav-item">
                  <%= link_to new_post_path, class: "nav-link text-light" do %>
                    <i class="fa-solid fa-file-circle-plus"></i>新規投稿
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to posts_path, class: "nav-link text-light" do %>
                    <i class="fa-solid fa-guitar"></i> バンド一覧
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to users_path, class: "nav-link text-light" do %>
                    <i class="fa-solid fa-users"></i>ユーザー一覧
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to user_path(current_user), class: "nav-link text-light" do %>
                    <i class="fa-solid fa-address-card"></i>マイページ
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to about_path, class: "nav-link text-light" do %>
                    <i class="fa-solid fa-paste"></i>アバウト
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to top_path, class: "nav-link text-light" do %>
                    <i class="fa-solid fa-house"></i>トップ
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-light" do %>
                    <i class="fa-solid fa-right-from-bracket"></i>ログアウト
                  <% end %>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to top_path, class: "nav-link text-light" do %>
                    <i class="fa-solid fa-house"></i>トップ
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to new_user_registration_path, class: "nav-link text-light" do %>
                    <i class="fa-solid fa-user-plus"></i>新規登録
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to new_user_session_path, class: "nav-link text-light" do %>
                    <i class="fa-solid fa-unlock-keyhole"></i>ログイン
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <div class="container">
        <% if notice %>
          <div class="alert alert-success" role="alert">
            <%= notice %>
          </div>
        <% end %>
        <% if alert %>
          <div class="alert alert-danger" role="alert">
            <%= alert %>
          </div>
        <% end %>
        <%= yield %>
      </div>
    </main>

    <footer class="bg-dark text-white pt-5 pb-4">
    </footer>
  </body>
</html>
